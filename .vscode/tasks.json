{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "clang++",
			"args": [
				"-std=c++11",
				"-stdlib=libc++",
				"-lglfw",
				"-framework",
				"CoreVideo",
				"-framework",
				"OpenGl",
				"-framework",
				"IOKit",
				"-framework",
				"Cocoa",
				"-framework",
				"Carbon",
				"${workspaceFolder}/GLShader.cpp",
				"${workspaceFolder}/main.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}